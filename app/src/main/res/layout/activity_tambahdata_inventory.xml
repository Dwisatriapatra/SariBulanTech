<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahDataInventory">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama inventory"
            android:textColor="@color/black"
            android:textSize="10pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputTambahNamaInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:inputType="text"
            android:hint="Input nama inventory"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/LinearLayout"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah (biji)"
            android:textColor="@color/black"
            android:textSize="10pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputTambahJumlahInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input jumlah inventory"
            android:inputType="text"
            android:textSize="10pt" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonTambahDatainventory"
        android:layout_width="161dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundedtanpagradient"
        android:backgroundTint="@color/button_color"
        android:layout_marginBottom="50dp"
        android:text="TAMBAH"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout1" />

</androidx.constraintlayout.widget.ConstraintLayout>